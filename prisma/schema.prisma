generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid())
  email String @unique

  proofs EvidenceProof[]
  comments Comment[] 
}

model Category {
  id    String @id @default(cuid())
  name  String @unique 

  proofs EvidenceProof[] 
}

model EvidenceProof {
  id    String @id @default(cuid())

  hash     String @unique @db.VarChar(64)

  fileName    String
  fileSize    Float
  fileMimeType String 
  description String? 

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  comments Comment[] 

  isSharedForTrial Boolean @default(false)

  recordedAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([categoryId])
}

model Comment {
  id    String @id @default(cuid())
  text  String @db.Text
  
  proofId String
  proof   EvidenceProof @relation(fields: [proofId], references: [id])
  
  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@index([proofId])
  @@index([userId])
}